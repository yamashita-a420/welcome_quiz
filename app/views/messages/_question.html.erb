<div class='col-auto'>
  <h3 class="text-center text-2xl m-4"><%= t '.q' %>. <%= question.content %></h5>
  <h4 class="text-center text-xl mx-4 my-2"><%= Question.human_attribute_name(:level) %>: <%= question.level %></h4>
</div>
<article class="card">
  <%= image_tag question.photo.url, class: 'card-img-top img-fluid', size: '500x500' %>
</article>
<div>
  <%= render 'messages/choices', choices: question.choices %>
</div>
<div class='col-auto'>
  <h4 class="text-center text-xl mx-4 my-2"><%= question.comment %></h4>
</div>

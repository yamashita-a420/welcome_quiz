<div class="common-container">
  <div class="flex flex-col title-font font-medium items-center text-gray-900 mb-4 md: mb-0">
    <h1 class="ml-3 text-3xl m-6"><%= t '.title' %></h1>
    <button class="choice-btn">
      <%= link_to t('defaults.new_question'), new_question_path %>
    </button>
    <button class="choice-btn">
      <%= link_to t('defaults.questions'), questions_path %>
    </button>
    <button class="choice-btn">
      <%= link_to t('defaults.quizzes'), quizzes_path %>
    </button>
    <button class="choice-btn">
      <%= link_to t('.messages_index'), messages_path %>
    </button>
    <button class="btn btn-primary w-64 m-4">
      <%= link_to t('.edit'), edit_mypage_path %>
    </button>
    <table class="table mx-6">
      <tr>
        <th scope="row"><%= t '.name' %></th>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <th scope="row"><%= User.human_attribute_name(:email) %></th>
        <td><%= current_user.email %></td>
      </tr>
    </table>
  </div>
</div>

<header class="bg-primary text-gray-600 body-font">
  <div class="drawer">
    <input id="my-drawer-3" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col">
      <!-- Navbar -->
      <div class="w-full navbar">
        <div class="flex-none lg:hidden">
          <label for="my-drawer-3" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </label>
        </div>
        <div class="flex-1 font-app text-3xl px-2 mx-2"><%= link_to t('helpers.app'), root_path %></div>
        <div class="flex-none hidden lg:block">
          <ul class="menu menu-horizontal">
            <!-- Navbar menu content here -->
            <li><%= link_to t('defaults.new_question'), new_question_path %></li>
            <li><%= link_to t('defaults.questions'), questions_path %></li>
            <li><%= link_to t('defaults.quizzes'), user_quiz_top_path(user_id: current_user.id) %></li>
            <li><%= link_to t('defaults.messages_index'), messages_path %></li>
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost font-medium text-base">アカウント設定</label>
              <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52 mt-4">
                <li><%= link_to t('defaults.set_quiz_top'), quiz_top_path %></li>
                <li><%= link_to t('defaults.qrcode'), qrcode_path %></li>
                <li><%= link_to t('defaults.mypage'), mypage_path %></li>
                <li><%= link_to t('defaults.logout'), logout_path, method: :delete %></li>
              </ul>
            </div>
          </ul>
        </div>
      </div>
      <%= render 'shared/flash_message' %>
      <%= yield %>
    </div>
    <div class="drawer-side">
      <label for="my-drawer-3" class="drawer-overlay"></label>
      <ul class="menu p-4 overflow-y-auto w-80 bg-base-100">
        <!-- Sidebar content here -->
        <li><%= link_to t('defaults.new_question'), new_question_path %></li>
        <li><%= link_to t('defaults.questions'), questions_path %></li>
        <li><%= link_to t('defaults.quizzes'), user_quiz_top_path(user_id: current_user.id) %></li>
        <li><%= link_to t('defaults.messages_index'), messages_path %></li>
        <div class="dropdown">
          <label tabindex="0" class="btn btn-ghost font-medium text-base">アカウント設定</label>
          <ul tabindex="0" class="menu dropdown-content p-2 shadow bg-base-100 rounded-box w-52">
            <li><%= link_to t('defaults.set_quiz_top'), quiz_top_path %></li>
            <li><%= link_to t('defaults.qrcode'), qrcode_path %></li>
            <li><%= link_to t('defaults.mypage'), mypage_path %></li>
            <li><%= link_to t('defaults.logout'), logout_path, method: :delete %></li>
          </ul>
        </div>
      </ul>
    </div>
  </div>
</header>

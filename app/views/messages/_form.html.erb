<%= form_with model: message, url: {controller: 'messages', action: 'create', user_id: @user.id }, local:true do |f| %>
  <%= render 'shared/error_message', object: message %>
  <%= f.label :name %>
  <div class="flex items-center mb-5 py-2 px-3 rounded-2xl">
    <%= f.text_field :name, class: 'input input-bordered input-secondary w-full max-w-xs' %>
  </div>
  <%= f.label :body, class: 'mt-3' %>
  <div class="flex items-center mb-5 py-2 px-3 rounded-2xl">
    <%= f.text_area :body, class: 'textarea textarea-secondary w-full max-w-xs' %>
  </div>
  <%= f.hidden_field :first_question, :value => @first_question.id %>
  <%= f.hidden_field :second_question, :value => @second_question.id %>
  <%= f.hidden_field :third_question, :value => @third_question.id %>
  <%= f.hidden_field :first_choice, :value => @first_choice.id %>
  <%= f.hidden_field :second_choice, :value => @second_choice.id %>
  <%= f.hidden_field :third_choice, :value => @third_choice.id %>
  <div class="flex items-center mb-5 py-2 px-3 rounded-2xl">
    <%= f.submit class:'btn btn-yellow-400 w-full max-w-xs mt-3 py-2'%>
  </div>
<% end %>

<%= form_with model: @question do |f| %>
  <%= render 'shared/error_message', object: @question %>

  <%= f.label :photo %></br>
  <%= f.file_field :photo, accept: 'image/*', id: 'action-button', class: 'input input-bordered w-full mb-3 px-4 py-3 rounded-full' %>
  <%= f.hidden_field :photo_cache %>
  <div class='mt-3 mb-3'>
    <%= image_tag question.photo.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'input input-bordered w-full mb-3 px-4 py-3 rounded-full' %>
  <%= f.label :comment %>
  <%= f.text_field :comment, class: 'input input-bordered w-full mb-3 px-4 py-3 rounded-full' %>
  <%= f.label :level %>
  <%= f.select :level, [[1, 'one'], [2, 'two'], [3, 'three']], {}, { class: "select select-bordered w-auto max-w-xs" } %>
  <div>
    <p class="text-xl text-gray-900"><%= Choice.model_name.human %></p>
    <div id='choices'>
      <%= f.fields_for :choices do |choice| %>
        <%= render 'choice_fields', :f => choice %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association '＋選択肢を増やす', f, :choices %>
      </div>
    </div>
  </div>
  <%= f.submit class:'btn btn-accent mb-5' %>
<% end %>

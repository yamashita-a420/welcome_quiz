<article class="card">
  <%= image_tag question.photo.url, class: 'card-img-top img-fluid', size: '500x500' %>
</article>
<div class='col-auto'>
  <h3 class="text-center text-3xl m-4"><%= question.content %></h5>
  <h4 class="text-center text-xl mx-4 my-2"><%= question.comment %></h4>
  <h4 class="text-center text-xl mx-4 my-2">
    <%= Question.human_attribute_name(:level) %>
    <% case question.level %>
      <% when "one" %>
        <%= icon 'fas', 'star' %>
        <%= icon 'far', 'star' %>
        <%= icon 'far', 'star' %>
      <% when "two" %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
        <%= icon 'far', 'star' %>
      <% else %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
    <% end %>
  </h4>
</div>
<div>
  <%= render 'second_questions/choices', choices: @choices %>
</div>

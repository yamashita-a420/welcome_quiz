<%= form_with model: @question do |f| %>
  <%= render 'shared/error_message', object: @question %>
  <div class="form-group">
    <%= f.label :photo %></br>
    <%= f.file_field :photo, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag @question.photo.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.text_field :level, class: 'form-control' %>
  </div>
  <%= f.submit class:'btn btn-primary' %>
<% end %>

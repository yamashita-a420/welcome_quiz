<div class='nested-fields'>
  <div class="field">
    <div>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'input input-bordered w-full mb-3 px-4 py-3 rounded-full' %>
    </div>
    <div>
      <%= f.label :correct_answer, class: 'block' %>
      <%= f.select :correct_answer, [['正解', 'correct' ], ['不正解', 'incorrect' ]], {}, {class: 'select select-bordered rounded-full w-auto max-w-xs'} %>
      <%= link_to_remove_association "削除" , f, class: 'link link-secondary link-hover' %>
    </div>
  </div>
</div>

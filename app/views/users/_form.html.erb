<%= form_with(model: user) do |f| %>
  <%= render 'shared/error_message', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
  <%= f.label :email %>
  <%= f.text_field :email, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
  <%= f.submit t('defaults.register'), class: "btn btn-accent mb-5" %>
<% end %>

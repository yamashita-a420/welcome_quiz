<%= form_with model: choice, url: [question, choice], local: true do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :correct_answer %>
    <%= f.select :correct_answer, Choice.correct_answers.keys %>
  </div>
  <%= f.submit %>
<% end %>

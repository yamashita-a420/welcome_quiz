<div class="quiz__thumbnail rounded-lg my-3">
  <%= image_tag question.photo.url, class: 'card-img-top img-fluid', size: '500x500' %>
</div>
<div class='col-auto'>
  <div class="text-center text-3xl mx-4 my-2"><%= question.content %></div>
  <div class="text-center text-xl mx-4 my-2"><%= question.comment %></div>
  <div class="text-center text-xl mx-4 my-2">
    <%= Question.human_attribute_name(:level) %>
    <% case question.level %>
      <% when "one" %>
        <%= icon 'fas', 'star' %>
        <%= icon 'far', 'star' %>
        <%= icon 'far', 'star' %>
      <% when "two" %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
        <%= icon 'far', 'star' %>
      <% else %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
        <%= icon 'fas', 'star' %>
    <% end %>
  </div>
</div>

<div class="col-sm-12 col-lg-4 mb-3">
    <div id="question-id-<%= question.id %>">
        <div class="card">
            <%= image_tag question.photo_url, class: 'card-img-top', size: '300x200' %>
            <div class="card-body">
                <h4 class="card-title">
                    <%= link_to question.content, question_path(question) %>
                </h4>
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <%= question.comment %>
                    </li>
                </ul>
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <%= t('.level') %>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
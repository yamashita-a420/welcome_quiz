<% set_meta_tags title: t('.title') %>
<div class="common-container">
  <div class="flex flex-col title-font font-medium items-center text-gray-900">
    <h1 class="ml-3 text-3xl m-6"><%= t '.title' %></h1>

    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th><%= User.human_attribute_name(:name) %></th>
            <th><%= User.human_attribute_name(:email) %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= current_user.name %></td>
            <td><%= current_user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <button class="btn btn-accent text-white mt-5">
      <%= link_to t('.edit'), edit_mypage_path %>
    </button>
  </div>
</div>

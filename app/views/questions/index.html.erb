<% content_for(:title, t('.title')) %>
<h1><%= t('.title') %></h1>
<div class="container pt-3">
  <!-- 質問一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @questions.present? %>
          <%= render @questions %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
  <!-- リンク -->
  <%= link_to t('.mypage'), mypage_path %>
  <%= link_to t('.new_question'), new_question_path %>
  <%= link_to t('.quizzes'), quizzes_path %>
</div>

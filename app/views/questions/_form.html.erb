<%= form_with model: @question do |f| %>
  <%= render 'shared/error_message', object: @question %>
  <div class="form-group">
    <%= f.label :photo %></br>
    <%= f.file_field :photo, class: 'assign-form mb-3', accept: 'image/*', id: 'atction-button' %>
    <%= f.hidden_field :photo_cache %>
    <div class='mt-3 mb-3'>
      <%= image_tag question.photo.url,
                    id: 'preview',
                    size: '300x200' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'assign-form' %>
  </div>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: 'assign-form' %>
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.select :level, [[1, 'one'], [2, 'two'], [3, 'three']] %>
  </div>
  <%= Choice.model_name.human %>
  <div id='choices'>
    <%= f.fields_for :choices do |choice| %>
      <%= render 'choice_fields', :f => choice %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association '＋選択肢を増やす', f, :choices %>
    </div>
  </div>
  <%= f.submit class:'btn btn-accent' %>
<% end %>

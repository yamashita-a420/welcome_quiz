<%= form_with url: login_path, method: :post do |f| %>
    <%= f.label :email, User.human_attribute_name(:email) %><br />
    <%= f.text_field :email, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
    <%= f.label :password, User.human_attribute_name(:password) %><br />
    <%= f.password_field :password, class: "input input-bordered w-full mb-3 px-4 py-3 rounded-full" %>
    <%= f.submit t('defaults.login'), class: "btn btn-accent mb-5" %>
<% end %>
